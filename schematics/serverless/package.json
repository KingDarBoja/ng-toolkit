{
  "author": "Maciej Treder <contact@maciejtreder.com>",
  "name": "@ng-toolkit/serverless",
  "version": "10.0.0",
  "description": "Angular Universal PWA boilerplate for serverless environment.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maciejtreder/ng-toolkit.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run lint",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "build:check": "tsc --noEmit",
    "format": "prettier --loglevel error --write \"**/*.{js,ts}\"",
    "lint": "eslint --ext ts .",
    "test": "jasmine-ts --config=jasmine.json",
    "check": "npm run format && npm run test && npm run build",
    "test:dev": "npm run check && npm run build && npm publish --registry http://localhost:4873",
    "ci-publish": "ci-publish"
  },
  "keywords": [
    "schematics",
    "angular",
    "serverless",
    "server side rendering",
    "pwa",
    "progressive web app",
    "lambda",
    "amazon web services",
    "google cloud functions",
    "firebase"
  ],
  "license": "MIT",
  "schematics": "./collection.json",
  "dependencies": {
    "@angular-devkit/core": "^10.0.7",
    "@angular-devkit/schematics": "^10.0.7",
    "@bugsnag/js": "^7.3.0",
    "@ng-toolkit/_utils": "10.0.0",
    "@schematics/angular": "^10.0.7",
    "comment-json": "^3.0.3"
  },
  "devDependencies": {
    "@types/comment-json": "^1.1.1",
    "@types/jasmine": "^3.5.13",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "ci-publish": "^1.3.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jasmine": "^3.6.1",
    "jasmine-spec-reporter": "^5.0.2",
    "jasmine-ts": "^0.3.0",
    "outdent": "^0.7.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2",
    "ts-node": "^9.0.0",
    "typescript": "3.9.7"
  },
  "publishConfig": {
    "access": "public"
  }
}
